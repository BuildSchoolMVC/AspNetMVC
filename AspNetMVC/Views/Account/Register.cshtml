@model RegisterViewModel
@{
    ViewBag.Title = "註冊/登入";
}
@section CSS{
    <link rel="stylesheet" href="~/Assets/css/account/login.css">
}


<section id="loginForm">
    <div class="login-modal">
        <div class="container-main">
            <div class="change-box">
                <a href="@Url.Action("Login","Account")" class="title title-login" for="title-check">登入</a>
                <span class="title title-register selected" for="title-check">註冊</span>
            </div>
            <div class="register-block show">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form", role = "form",id="login" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                          @Html.TextBoxFor(m => m.Email, new { @class = "input register-email", placeholder = "信箱" })
                          <p class="warn register-email"></p>
                    </div>
                    <div class="form-group">
                          @Html.PasswordFor(m => m.Password, new { @class = "input register-password", placeholder = "密碼" })
                          <p class="warn register-password"></p>
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input register-password-check", placeholder = "確認密碼" })
                        <p class="warn register-password-check"></p>
                        <input class="button btn_submit" type="submit" value="確認送出">
                    </div>
                }
            </div>
        </div>
    </div>
</section>


@section JS {
    <script src="~/Assets/js/account/login.js"></script>
}