@model RegisterViewModel
@{
    ViewBag.Title = "註冊/登入";
}
@section CSS{
    <link rel="stylesheet" href="~/Assets/css/account/login.css">
}
<section class="section_registerForm">
    <div class="login-modal">
        <div class="container-main">
            <div class="change-box">
                <a href="@Url.Action("Login","Account")" class="title title-login" for="title-check">登入</a>
                <span class="title title-register selected" for="title-check">註冊</span>
            </div>
            <div class="register-block show">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-12 my-2 p-0">
                            @Html.TextBoxFor(m => m.Email, new { @class = "input", placeholder = "信箱" })
                            <p class="warn register-email"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-12 my-2 p-0">
                            @Html.PasswordFor(m => m.Password, new { @class = "input", placeholder = "密碼" })
                            <p class="warn register-password"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-12 my-2 p-0">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input", placeholder = "確認密碼" })
                        </div>
                    </div>
                    <div class="form-group my-2">
                        <div class="float-right w-100">
                            <input type="submit" class="button btn_submit" value="註冊" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section JS {
    <script src="~/Assets/js/account/login.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
