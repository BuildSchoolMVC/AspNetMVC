@using Microsoft.AspNet.Identity

    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()

            <ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.ActionLink("會員中心", "CenterMember", "Index", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btns login-register" })
                </li>
                <li><a href="javascript:document.getElementById('logoutForm').submit();isLogin=false;localStorage.setItem('login',isLogin)" class="nav-link color-gray">登出</a></li>
            </ul>
        }
    }
    else
    {
        @Html.ActionLink("註冊 / 登入", "Login", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btns login-register" })
    }





