@model DetailPageViewModel
@{
    ViewBag.Title = Model.Name;
}
@section CSS{
 <link href="~/Assets/css/DetailPage/detailPage.css" rel="stylesheet">    
}

<section class="section_product">
    <div class="container-lg">
        <div class="row">
            <div class="col-12 col-md-6  d-flex justify-content-center align-items-lg-center pt-md-1">
                <div class="product-pic mb-2">
                    <img src="https://i.imgur.com/@(Model.PhotoUrl)" alt="@Model.Name" class="w-100">
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="product-content p-3">
                    <div class="content-header">
                        <h1 data-id="@Model.Id" class="title">@Model.Name</h1>
                    </div>
                    <div class="content-body">
                        <table>
                            <tr>
                                <td class="table-header">服務範圍</td>
                                <td>台北市 、 新北市</td>
                            </tr>
                            <tr>
                                <td class="table-header">服務內容</td>
                                <td class="service-content">@Model.ServiceItem</td>
                            </tr>
                            <tr>
                                <td class="table-header">服務場域及坪數</td>
                                @if (Model.RoomName3 != "-")
                                {
                                    <td class="place">
                                        @Model.RoomName - @Model.SquarefeetName、
                                        @Model.RoomName2 - @Model.SquarefeetName2、
                                        @Model.RoomName3 - @Model.SquarefeetName3
                                    </td>
                                }
                                else
                                {
                                    <td class="place">
                                        @Model.RoomName - @Model.SquarefeetName、
                                        @Model.RoomName2 - @Model.SquarefeetName2
                                    </td>
                                }
                            </tr>
                            <tr>
                                <td class="table-header">時數</td>
                                <td>@Model.Hour</td>
                            </tr>
                            <tr>
                                <td class="table-header">
                                    注意事項
                                </td>
                                <td>
                                    <ul class="pl-4 note">
                                        <li>將依實際依照現場狀況為主，若現場判斷時間不足服務人員皆會與您報告可完成進度</li>
                                        <li>現場如有垃圾服務人員僅協助打包，無法協助帶走垃圾</li>
                                        <li>黴菌、或水垢深根過長時間，可能無法完全清楚</li>
                                        <li>若有需處理高處，需要請客人自備梯子</li>
                                    </ul>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="content-footer">
                        <p>價格 : <span class="price">@Model.Price</span></p>
                        <div class="btn-group">
                            <a href="@Url.Action("Index","Checkout")" class="btns checkout">直接結帳</a>
                            <button class="btns add-favorites">加入收藏</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section_product-info">
    <div class="container-lg">
        <div class="product-tabs">
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="#">介紹</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">服務規格</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="#">評價</a>
                </li>
            </ul>
        </div>
        <div class="product-tab-item">
            <h2>介紹</h2>
            <p>
                @Model.Description
            </p>
        </div>
        <div class="product-tab-item">
            <h2>服務規格</h2>
            <div class="service d-flex">
                <div class="service-title w-50">
                    服務地區
                </div>
                <div class="service-region w-50">
                    台北市、新北市
                </div>
            </div>
        </div>
        <div class="product-tab-item active">
            <h2>商品評價</h2>
            <div class="comment">
                <h4>@Model.Name - 共 2 則評論</h4>
                <div class="comment-item">
                    <div class="row">
                        <div class="col-2 pr-0 d-flex justify-content-center align-items-center">
                            <img src="~/Assets/images/p1.jpg" alt="人物" class="user rounded-circle d-block">
                        </div>
                        <div class="col-6">
                            <p>陳先生 - <span>2021/1/28</span></p>
                            <p>好棒棒!!!</p>
                        </div>
                        <div class="col-4 d-flex align-items-center justify-content-center">
                            <i class="fas fa-star color-yellow pr-1"></i>
                            <i class="fas fa-star color-yellow pr-1"></i>
                            <i class="fas fa-star color-yellow pr-1"></i>
                            <i class="fas fa-star color-yellow pr-1"></i>
                            <i class="fas fa-star color-yellow pr-1"></i>
                        </div>
                    </div>
                </div>
                <div class="comment-item">
                    <div class="row">
                        <div class="col-2 pr-0 d-flex justify-content-center align-items-center">
                            <img src="~/Assets/images/p2.jpg" alt="人物" class="user rounded-circle d-block">
                        </div>
                        <div class="col-6">
                            <p>林小姐 - <span>2021/1/26</span></p>
                            <p>非常好!!!</p>
                        </div>
                        <div class="col-4 d-flex align-items-center justify-content-center">
                            <i class="fas fa-star color-yellow pr-1"></i>
                            <i class="fas fa-star color-yellow pr-1"></i>
                            <i class="fas fa-star color-yellow pr-1"></i>
                            <i class="fas fa-star color-yellow pr-1"></i>
                            <i class="fas fa-star color-yellow pr-1"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-none">
                <p>目前沒有評論</p>
                <p>只有註冊並且購買過商品的顧客才能撰寫評價</p>
            </div>
        </div>
    </div>
</section>

@section JS{
    <script src="~/Assets/js/DetailPage/detailPage.js"></script>    
}